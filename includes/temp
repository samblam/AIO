
<script type="text/javascript">
  $("select").on('change',function(){
    if($(this).find('option:selected').id()=="default")
      $("#btnSubmit").attr('disabled',true)
    else
      $("#btnSubmit").attr('disabled',false)
  });
</script>


<div class="navbar navbar-expand-lg navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">
    FCS - AIO
  </span>

  <div class="collapse navbar-collapse pull-right" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li>
        <!-- Switch Roles -->
        <?php 
          if( sizeof($_SESSION['roles']) > 1 ) {
          ?>
          <form class="form-inline" action="change_role.php">
            <select id="roleSelect">
              <option id="default">Switch Role</option>
              <?php
                foreach ($_SESSION['roles'] as $role ) {
                  echo "<option value=\"" . $role . "\">";
                  switch ($role) {
                    case 'professor':
                      echo "Professor";
                      break;
                    case 'aio':
                      echo "AIO";
                      break;
                    case 'admin':
                      echo "Admin";
                      break;
                    case 'student':
                      echo "Student";
                      break;
                    default:
                      break;
                  }
                  echo "</option>";
                }
              ?>
            </select>
            <button type="submit" class="btn btn-sm btn-default" id="btnSubmit">Switch</button>
          </form>
          <?php
          }
        ?>
      </li>
      <li>
        <!-- Logout Button -->
        <form action="../includes/logout.php" method="get">
          <button type="submit" class="btn btn-sm btn-default">Logout</button>
        </form>
      </li>
    </ul>
  </div>
</div>